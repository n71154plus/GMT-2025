<Window x:Class="GMT_2025.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMT_2025"
        xmlns:control="clr-namespace:GMT_2025.Controls"
        mc:Ignorable="d"
        Title="{Binding Product.Name}" Height="750" Width="1280"
        Icon="pack://application:,,,/Resources/favicon.ico"
        FontFamily="Consolas" FontSize="12"
        Background="White"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- 讓 RadioButton 看起來像 ToggleButton -->
        <Style x:Key="RadioToggleStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <ToggleButton Content="{TemplateBinding Content}"
                                  IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  Padding="{TemplateBinding Padding}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True" Margin="0">
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Menu DockPanel.Dock ="Left">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" />
                    <MenuItem Header="_Open" />
                    <Separator/>
                    <MenuItem Header="E_xit" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Copy" />
                    <MenuItem Header="_Paste" />
                </MenuItem>
            </Menu>
            <RadioButton DockPanel.Dock ="Right" Content="紅色" GroupName="ColorGroup" Style="{StaticResource RadioToggleStyle}"/>
            <RadioButton DockPanel.Dock ="Right" Content="綠色" GroupName="ColorGroup" Style="{StaticResource RadioToggleStyle}"/>
            <RadioButton DockPanel.Dock ="Right" Content="藍色" GroupName="ColorGroup" Style="{StaticResource RadioToggleStyle}"/>

        </DockPanel>


          
        <DockPanel DockPanel.Dock="Top" Margin="0">
            <control:DictionaryDataGrid Margin="0" Items="{Binding Product.RegisterTable.DefaultCode}" />
        </DockPanel>
        <StatusBar DockPanel.Dock="Bottom" Margin="0">
            <StatusBarItem>
                <TextBlock Text="Ready" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Test" />
            </StatusBarItem>
        </StatusBar>
        <UniformGrid DockPanel.Dock="Left" x:Name="UniformGridLeftButton" Margin="0"  Rows="{Binding CommandsRowCount}" Columns="1" Width="80" Background="Transparent">
            <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="4" Padding="1" Margin="1">
                <DockPanel Margin="0">
                    <TextBlock DockPanel.Dock="Top" Foreground="Blue" FontWeight="ExtraBold" TextWrapping ="Wrap"  Text="Device Address" Margin="0" />
                    <ListBox BorderThickness="0" ItemsSource="{Binding Product.RegisterTable.DeviceAddress}" Width="Auto" Margin="0" SelectedIndex="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StringFormat=0x{0:X2}}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
            <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="4" Padding="1" Margin="1">
                <DockPanel Background="AliceBlue" Margin="0">
                    <TextBlock DockPanel.Dock="Top" Foreground="Blue" Text="CheckSum" FontWeight="ExtraBold" Margin="0"  />
                    <Viewbox Stretch="Uniform" Margin="0">
                        <TextBlock Text="{Binding CheckSum, StringFormat='{}{0:X6}'}"
                               TextAlignment="Center" />
                    </Viewbox>
                </DockPanel>
            </Border>
        </UniformGrid>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <control:MainContentUniformGrid
                Columns="5"
                GroupBy="Group" />
        </ScrollViewer>
    </DockPanel>
</Window>
